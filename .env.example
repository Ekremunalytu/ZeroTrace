# ZeroTrace Development Environment Variables
# Copy this file to .env and modify values as needed

# =============================================================================
# DEVELOPMENT ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=zerotrace
POSTGRES_USER=zerotrace
POSTGRES_PASSWORD=zerotrace_dev_pass

# =============================================================================
# MESSAGE BROKER
# =============================================================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=zerotrace
RABBITMQ_PASSWORD=zerotrace_dev_pass

# =============================================================================
# CACHE
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET_KEY=your_development_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# EXTERNAL APIS
# =============================================================================
# VirusTotal API (optional)
VT_API_KEY=your_virustotal_api_key_here

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=pretty

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================
DEV_MODE=true
DEV_SKIP_AUTH=false
DEV_RELOAD=true
